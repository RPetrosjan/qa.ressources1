{% if admin.isGranted('EDIT', object) and admin.hasRoute('edit') %}
    <a href="{{ admin.generateObjectUrl('edit', object) }}" class="{% if first %}btn btn-primary {% endif %}edit_link" title="{{ 'action_edit'|trans({}, 'SonataAdminBundle') }}">
        <i class="{% if first %}icon-white {% endif %}glyphicon glyphicon-edit"></i>
        {{ 'action_edit'|trans({}, 'SonataAdminBundle') }}
    </a>
{% else %}
    <a disabled="disabled" class="{% if first %}btn btn-small {% endif %}edit_link" title="{{ 'action_edit'|trans({}, 'SonataAdminBundle') }}">
        <i class="{% if first %}icon-white {% endif %}glyphicon glyphicon-edit"></i>
        {{ 'action_edit'|trans({}, 'SonataAdminBundle') }}
    </a>
{% endif %}
