{% extends '::sonata_standard_layout.html.twig' %}

{% block sonata_admin_content %}

    {% block notice %}
        {% include 'SonataCoreBundle:FlashMessage:render.html.twig' %}
    {% endblock notice %}

    <div class="page-header">
        <h1>{{ "import"|trans }} <small>{{ "project"|trans }}</small></h1>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Formulaire d'import</h3>
        </div>
        <div class="panel-body">
            <form action="{{ path('admin_act_resource_project_import') }}" method="post" {{ form_enctype(form) }} role="form">
                <div class="form-group">
                    {{ form_label(form.attachment) }}
                    {{ form_errors(form.attachment) }}
                    {{ form_widget(form.attachment) }}
                    {{ form_widget(form) }}
                    <p class="help-block"><span class="glyphicon glyphicon-import"></span> {{ "import.excel.file"|trans }}</p>
                </div>

                <button type="submit" class="btn btn-default">{{ "to.import"|trans }}</button>
            </form>

            <p class="text-center">
                <span class="glyphicon glyphicon-info-sign"></span> {{ "import.model.to.follow"|trans }}<br/>
                {{ "import.column.order"|trans }}
            </p>
        </div>

        <table class="table table-bordered table-condensed">
            <thead>
            <tr>
                <th>{{ "task.name"|trans }}</th>
                <th>{{ "start"|trans }}</th>
                <th>{{ "end"|trans }}</th>
                <th>{{ "workload.sold"|trans }}</th>
                <th>{{ "teams"|trans }}/{{ "profiles"|trans }}</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td colspan="5" style="text-align:center;">{{ "import.project.row.first"|trans }}</td>
            </tr>
            <tr>
                <td><i>{{ "task.meta"|trans }}</i></td>
                <td colspan="2" rowspan="3" style="vertical-align:middle; text-align:center;">{{ "import.date.any.format"|trans }}</td>
                <td rowspan="3" style="vertical-align:middle; text-align:center;">{{ "import.project.number.of.days"|trans }}</td>
                <td rowspan="3" style="vertical-align:middle; text-align:center;">{{ "import.project.teams.or.profiles"|trans }}</td>
            </tr>
            <tr>
                <td>&nbsp;&nbsp;&nbsp;<i>{{ "task"|trans }}</i> <span class="pull-right"><i class="icon-warning-sign"></i> <b>{{ "import.project.three.spaces.before.name"|trans }}</b></span></td>
            </tr>
            <tr>
                <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<i>{{ "task.sub"|trans }}</i> <span class="pull-right"><i class="icon-warning-sign"></i> <b>{{ "import.project.six.spaces.before.name"|trans }}</b></span></td>
            </tr>
            </tbody>
        </table>
    </div>

{% endblock %}
