{% extends "ActResourceBundle::layout.html.twig" %}

{% block title %}{{ "connection"|trans }} - {{ parent() }} {% endblock %}

{% block body_attributes %}id="login-page"{% endblock %}

{% block body_title_left %}

{% endblock %}

{% block body_title_text %}
    {{ "ldap.connect.with.identifiers"|trans }}
    <i class="glyphicon glyphicon-question-sign help-popover" data-content="{{ "ldap.connect.with.identifiers.help"|trans }}"></i>
{% endblock %}

{% block body_content %}
<div id="login-page-wrapper">
    <form class="form-horizontal login-form" method="POST" action="{{ path('act_resource_ldap_login') }}" role="form">
        <div class="form-group has-feedback">
            <label for="username" class="col-sm-4 control-label">{{ "ldap.username"|trans }}</label>
            <div class="col-sm-4">
                <input type="text" name="username" id="username" class="form-control" required="required" value="{{ username }}">
                <span class="glyphicon glyphicon-user form-control-feedback"></span>
                <p class="help-block">
                    {{ "ldap.username.help"|trans }}<br/>
                    <span class="label label-warning">{{ "warning"|trans }}!</span> {{ "ldap.username.help.warning"|trans }}
                </p>
            </div>
        </div>

        <div class="form-group has-feedback">
            <label for="password" class="col-sm-4 control-label">{{ "ldap.password"|trans }}</label>
            <div class="col-sm-4">
                <input type="password" name="password" id="password" class="form-control" required="required">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                <p class="help-block">
                    {{ "ldap.password.help"|trans }}<br/>
                    <span class="label label-warning">{{ "warning"|trans }}!</span> {{ "ldap.password.help.warning"|trans }}
                </p>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-offset-4 col-sm-4">
                <button type="submit" class="btn btn-primary">{{ "connection"|trans }}</button>
            </div>
        </div>
    </form>
</div>
{% endblock %}
